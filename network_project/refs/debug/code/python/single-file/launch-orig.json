{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "${command:pickArgs}"
            ]
        }
    ]
}

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Scripts: run, tool",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-t",
                "192.168.1.158"
            ]
        }
    ]
}

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to sudo run.py",
            "type": "debugpy",
            "request": "attach",  // Change to "attach"
            "connect": {
                "host": "localhost",
                "port": 5678 // Match the port above
            }
        }
    ]
}

